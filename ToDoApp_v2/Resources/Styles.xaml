<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ==================== DESIGN TOKENS ==================== -->

    <!-- Spacing System (8px base) -->
    <sys:Double x:Key="SpaceXS">4</sys:Double>
    <sys:Double x:Key="SpaceSM">8</sys:Double>
    <sys:Double x:Key="SpaceMD">16</sys:Double>
    <sys:Double x:Key="SpaceLG">24</sys:Double>
    <sys:Double x:Key="SpaceXL">32</sys:Double>

    <!-- Font Scale -->
    <sys:Double x:Key="FontXS">10</sys:Double>
    <sys:Double x:Key="FontSM">12</sys:Double>
    <sys:Double x:Key="FontMD">14</sys:Double>
    <sys:Double x:Key="FontLG">16</sys:Double>
    <sys:Double x:Key="FontXL">20</sys:Double>
    <sys:Double x:Key="FontXXL">24</sys:Double>

    <!-- Corner Radius -->
    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">8</CornerRadius>
    <CornerRadius x:Key="RadiusLG">12</CornerRadius>

    <!-- ==================== COLORS ==================== -->

    <!-- Colors (Todoist Style - Light) -->
    <Color x:Key="BackgroundColor">#FAFAFA</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="SidebarColor">#FAFAFA</Color>
    <Color x:Key="AccentColor">#7C3AED</Color>
    <Color x:Key="AccentHoverColor">#6D28D9</Color>
    <Color x:Key="ImportantColor">#FF9500</Color>
    <Color x:Key="CompletedColor">#058527</Color>
    <Color x:Key="TextColor">#202020</Color>
    <Color x:Key="TextLightColor">#808080</Color>
    <Color x:Key="BorderColor">#E5E5E5</Color>
    <Color x:Key="HoverColor">#F5F5F5</Color>
    <Color x:Key="SelectedColor">#7C3AED</Color>
    <Color x:Key="SelectedHoverColor">#EDE9FE</Color>
    <Color x:Key="SelectedLightColor">#F5F3FF</Color>
    <Color x:Key="TodayCardColor">#EDE9FE</Color>
    <Color x:Key="ImportantCardColor">#FFF0DB</Color>
    <Color x:Key="ImportantHoverColor">#FFE4C0</Color>
    <Color x:Key="CompletedFillColor">#EDE9FE</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="ImportantBrush" Color="{StaticResource ImportantColor}"/>
    <SolidColorBrush x:Key="CompletedBrush" Color="{StaticResource CompletedColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}"/>
    <SolidColorBrush x:Key="SelectedHoverBrush" Color="{StaticResource SelectedHoverColor}"/>
    <SolidColorBrush x:Key="SelectedLightBrush" Color="{StaticResource SelectedLightColor}"/>
    <SolidColorBrush x:Key="TodayCardBrush" Color="{StaticResource TodayCardColor}"/>
    <SolidColorBrush x:Key="ImportantCardBrush" Color="{StaticResource ImportantCardColor}"/>
    <SolidColorBrush x:Key="ImportantHoverBrush" Color="{StaticResource ImportantHoverColor}"/>
    <SolidColorBrush x:Key="CompletedFillBrush" Color="{StaticResource CompletedFillColor}"/>

    <!-- Toast Colors (Light Theme) -->
    <Color x:Key="ToastBackgroundColor">#333333</Color>
    <Color x:Key="ToastBorderColor">#666666</Color>
    <Color x:Key="ToastHoverColor">#444444</Color>
    <SolidColorBrush x:Key="ToastBackgroundBrush" Color="{StaticResource ToastBackgroundColor}"/>
    <SolidColorBrush x:Key="ToastBorderBrush" Color="{StaticResource ToastBorderColor}"/>
    <SolidColorBrush x:Key="ToastHoverBrush" Color="{StaticResource ToastHoverColor}"/>

    <!-- Overlay Color -->
    <Color x:Key="OverlayColor">#80000000</Color>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>

    <!-- Overdue/Error Color (Soft Rose - matches purple theme) -->
    <Color x:Key="OverdueColor">#E85D75</Color>
    <SolidColorBrush x:Key="OverdueBrush" Color="{StaticResource OverdueColor}"/>
    <Color x:Key="OverdueCardColor">#FDE8EC</Color>
    <SolidColorBrush x:Key="OverdueCardBrush" Color="{StaticResource OverdueCardColor}"/>
    <Color x:Key="OverdueHoverColor">#FACDD6</Color>
    <SolidColorBrush x:Key="OverdueHoverBrush" Color="{StaticResource OverdueHoverColor}"/>

    <!-- Blush Color (Pet) -->
    <Color x:Key="BlushColor">#E8A0A0</Color>
    <SolidColorBrush x:Key="BlushBrush" Color="{StaticResource BlushColor}"/>

    <!-- Checkmark Color -->
    <Color x:Key="CheckmarkColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="CheckmarkBrush" Color="{StaticResource CheckmarkColor}"/>

    <!-- ==================== COMMON BUTTON STYLES ==================== -->

    <!-- Small Button Style (Padding 8,4, CornerRadius 4) -->
    <Style x:Key="SmallButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Primary Button Style (Accent color) -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Ghost Button Style (Transparent, no border) -->
    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon Button Style (for small icon buttons, min 32x32 for touch) -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== COMPONENT STYLES ==================== -->

    <!-- Navigation Button Style -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E5E5EA"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Selected Navigation Button Style -->
    <Style x:Key="NavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Quick Add TextBox Style -->
    <Style x:Key="QuickAddTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checkbox Style for Todo Items (Todoist Style) -->
    <Style x:Key="TodoCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Width="20" Height="20">
                        <Ellipse x:Name="circle"
                                 Width="20" Height="20"
                                 Stroke="{StaticResource TextLightBrush}"
                                 StrokeThickness="2"
                                 Fill="Transparent"/>
                        <Path x:Name="checkmark"
                              Data="M 5,10 L 8.5,13.5 L 15,7"
                              Stroke="{StaticResource AccentBrush}"
                              StrokeThickness="2"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              StrokeLineJoin="Round"
                              Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- 완료 상태 - 진한 테두리 + 연한 배경 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="circle" Property="Fill" Value="{StaticResource CompletedFillBrush}"/>
                            <Setter TargetName="circle" Property="Stroke" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Toggle Button Style for Important/Today (Button version) -->
    <Style x:Key="ToggleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#10000000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Task Item Border Style with Transition (Todoist) -->
    <Style x:Key="TaskItemStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="#F5F5F5"
                                        Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="Transparent"
                                        Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
