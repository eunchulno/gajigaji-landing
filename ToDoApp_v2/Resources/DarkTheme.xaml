<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ==================== DESIGN TOKENS ==================== -->

    <!-- Spacing System (8px base) -->
    <sys:Double x:Key="SpaceXS">4</sys:Double>
    <sys:Double x:Key="SpaceSM">8</sys:Double>
    <sys:Double x:Key="SpaceMD">16</sys:Double>
    <sys:Double x:Key="SpaceLG">24</sys:Double>
    <sys:Double x:Key="SpaceXL">32</sys:Double>

    <!-- Font Scale -->
    <sys:Double x:Key="FontXS">10</sys:Double>
    <sys:Double x:Key="FontSM">12</sys:Double>
    <sys:Double x:Key="FontMD">14</sys:Double>
    <sys:Double x:Key="FontLG">16</sys:Double>
    <sys:Double x:Key="FontXL">20</sys:Double>
    <sys:Double x:Key="FontXXL">24</sys:Double>

    <!-- Corner Radius -->
    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">8</CornerRadius>
    <CornerRadius x:Key="RadiusLG">12</CornerRadius>

    <!-- ==================== COLORS ==================== -->

    <!-- Dark Theme Colors (Todoist Style - Dark) -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="CardColor">#323232</Color>
    <Color x:Key="SidebarColor">#252525</Color>
    <Color x:Key="AccentColor">#A78BFA</Color>
    <Color x:Key="AccentHoverColor">#C4B5FD</Color>
    <Color x:Key="ImportantColor">#FF9F0A</Color>
    <Color x:Key="CompletedColor">#2DA042</Color>
    <Color x:Key="TextColor">#F0F0F0</Color>
    <Color x:Key="TextLightColor">#A8A8A8</Color>
    <Color x:Key="BorderColor">#4A4A4A</Color>
    <Color x:Key="HoverColor">#404040</Color>
    <Color x:Key="SelectedColor">#A78BFA</Color>
    <Color x:Key="SelectedHoverColor">#453860</Color>
    <Color x:Key="SelectedLightColor">#3A3050</Color>
    <Color x:Key="TodayCardColor">#3A3050</Color>
    <Color x:Key="ImportantCardColor">#453D28</Color>
    <Color x:Key="ImportantHoverColor">#554A30</Color>
    <Color x:Key="CompletedFillColor">#3A3050</Color>

    <!-- Toast Colors (Dark Theme) -->
    <Color x:Key="ToastBackgroundColor">#2C2C2E</Color>
    <Color x:Key="ToastBorderColor">#38383A</Color>
    <Color x:Key="ToastHoverColor">#3A3A3C</Color>

    <!-- Overlay Color -->
    <Color x:Key="OverlayColor">#80000000</Color>

    <!-- Overdue/Error Color (Soft Rose Dark - matches purple theme) -->
    <Color x:Key="OverdueColor">#F27A8E</Color>
    <Color x:Key="OverdueCardColor">#4A3540</Color>
    <Color x:Key="OverdueHoverColor">#5A404A</Color>

    <!-- Blush Color (Pet) -->
    <Color x:Key="BlushColor">#E8A0A0</Color>

    <!-- Checkmark Color (Dark theme uses white checkmark) -->
    <Color x:Key="CheckmarkColor">#FFFFFF</Color>

    <!-- ==================== BRUSHES ==================== -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="ImportantBrush" Color="{StaticResource ImportantColor}"/>
    <SolidColorBrush x:Key="CompletedBrush" Color="{StaticResource CompletedColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}"/>
    <SolidColorBrush x:Key="SelectedHoverBrush" Color="{StaticResource SelectedHoverColor}"/>
    <SolidColorBrush x:Key="SelectedLightBrush" Color="{StaticResource SelectedLightColor}"/>
    <SolidColorBrush x:Key="TodayCardBrush" Color="{StaticResource TodayCardColor}"/>
    <SolidColorBrush x:Key="ImportantCardBrush" Color="{StaticResource ImportantCardColor}"/>
    <SolidColorBrush x:Key="ImportantHoverBrush" Color="{StaticResource ImportantHoverColor}"/>
    <SolidColorBrush x:Key="CompletedFillBrush" Color="{StaticResource CompletedFillColor}"/>

    <!-- Toast Brushes -->
    <SolidColorBrush x:Key="ToastBackgroundBrush" Color="{StaticResource ToastBackgroundColor}"/>
    <SolidColorBrush x:Key="ToastBorderBrush" Color="{StaticResource ToastBorderColor}"/>
    <SolidColorBrush x:Key="ToastHoverBrush" Color="{StaticResource ToastHoverColor}"/>

    <!-- Overlay Brush -->
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>

    <!-- Overdue Brush -->
    <SolidColorBrush x:Key="OverdueBrush" Color="{StaticResource OverdueColor}"/>
    <SolidColorBrush x:Key="OverdueCardBrush" Color="{StaticResource OverdueCardColor}"/>
    <SolidColorBrush x:Key="OverdueHoverBrush" Color="{StaticResource OverdueHoverColor}"/>

    <!-- Blush Brush -->
    <SolidColorBrush x:Key="BlushBrush" Color="{StaticResource BlushColor}"/>

    <!-- Checkmark Brush -->
    <SolidColorBrush x:Key="CheckmarkBrush" Color="{StaticResource CheckmarkColor}"/>

    <!-- ==================== COMMON BUTTON STYLES ==================== -->

    <!-- Small Button Style (Padding 8,4, CornerRadius 4) -->
    <Style x:Key="SmallButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Primary Button Style (Accent color) -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#1E1E2E"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Ghost Button Style (Transparent, no border) -->
    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon Button Style (for small icon buttons, min 32x32 for touch) -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== COMPONENT STYLES ==================== -->

    <!-- Navigation Button Style -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2C2C2E"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Selected Navigation Button Style -->
    <Style x:Key="NavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Quick Add TextBox Style -->
    <Style x:Key="QuickAddTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checkbox Style for Todo Items (Todoist Style) -->
    <Style x:Key="TodoCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Width="20" Height="20">
                        <Ellipse x:Name="circle"
                                 Width="20" Height="20"
                                 Stroke="{StaticResource TextLightBrush}"
                                 StrokeThickness="2"
                                 Fill="Transparent"/>
                        <Path x:Name="checkmark"
                              Data="M 5,10 L 8.5,13.5 L 15,7"
                              Stroke="{StaticResource AccentBrush}"
                              StrokeThickness="2"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              StrokeLineJoin="Round"
                              Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- 완료 상태 - 진한 테두리 + 연한 배경 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="circle" Property="Fill" Value="{StaticResource CompletedFillBrush}"/>
                            <Setter TargetName="circle" Property="Stroke" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Toggle Button Style for Important/Today (Button version) -->
    <Style x:Key="ToggleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#20FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Task Item Border Style with Transition (Todoist Dark) -->
    <Style x:Key="TaskItemStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="#363636"
                                        Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="Transparent"
                                        Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!-- Calendar Style for Dark Theme -->
    <Style TargetType="Calendar">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="CalendarDayButtonStyle">
            <Setter.Value>
                <Style TargetType="CalendarDayButton">
                    <Setter Property="MinWidth" Value="28"/>
                    <Setter Property="MinHeight" Value="28"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CalendarDayButton">
                                <Grid>
                                    <Rectangle x:Name="TodayBackground" Fill="Transparent" RadiusX="14" RadiusY="14"/>
                                    <Rectangle x:Name="SelectedBackground" Fill="Transparent" RadiusX="14" RadiusY="14"/>
                                    <ContentPresenter x:Name="NormalText"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      TextElement.Foreground="#F0F0F0"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsToday" Value="True">
                                        <Setter TargetName="TodayBackground" Property="Fill" Value="{StaticResource AccentBrush}"/>
                                        <Setter TargetName="NormalText" Property="TextElement.Foreground" Value="White"/>
                                        <Setter TargetName="NormalText" Property="TextElement.FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="SelectedBackground" Property="Fill" Value="{StaticResource SelectedLightBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="SelectedBackground" Property="Fill" Value="{StaticResource HoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsInactive" Value="True">
                                        <Setter TargetName="NormalText" Property="TextElement.Foreground" Value="#707070"/>
                                    </Trigger>
                                    <Trigger Property="IsBlackedOut" Value="True">
                                        <Setter TargetName="NormalText" Property="TextElement.Foreground" Value="#505050"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CalendarButtonStyle">
            <Setter.Value>
                <Style TargetType="CalendarButton">
                    <Setter Property="MinWidth" Value="40"/>
                    <Setter Property="MinHeight" Value="40"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CalendarButton">
                                <Grid>
                                    <Rectangle x:Name="Background" Fill="Transparent" RadiusX="4" RadiusY="4"/>
                                    <ContentPresenter x:Name="NormalText"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      TextElement.Foreground="#F0F0F0"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Background" Property="Fill" Value="{StaticResource HoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsInactive" Value="True">
                                        <Setter TargetName="NormalText" Property="TextElement.Foreground" Value="#707070"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CalendarItem Style for Dark Theme (month/year header) -->
    <Style TargetType="CalendarItem">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CalendarItem">
                    <ControlTemplate.Resources>
                        <DataTemplate x:Key="{x:Static CalendarItem.DayTitleTemplateResourceKey}">
                            <TextBlock Text="{Binding}"
                                       FontWeight="Bold"
                                       FontSize="10"
                                       Foreground="#A8A8A8"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,6,0,6"/>
                        </DataTemplate>
                    </ControlTemplate.Resources>
                    <Grid x:Name="PART_Root">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header with month/year and nav buttons -->
                                <Grid Grid.Row="0" Margin="4,8,4,8">
                                    <Button x:Name="PART_PreviousButton"
                                            HorizontalAlignment="Left"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Foreground="#F0F0F0"
                                            FontSize="14"
                                            Content="◀"
                                            Padding="8,4"/>
                                    <Button x:Name="PART_HeaderButton"
                                            HorizontalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontWeight="Bold"
                                            Foreground="#F0F0F0"
                                            FontSize="14"/>
                                    <Button x:Name="PART_NextButton"
                                            HorizontalAlignment="Right"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Foreground="#F0F0F0"
                                            FontSize="14"
                                            Content="▶"
                                            Padding="8,4"/>
                                </Grid>

                                <!-- Month view -->
                                <Grid x:Name="PART_MonthView" Grid.Row="1" Visibility="Visible" Margin="6,0,6,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                </Grid>

                                <!-- Year view -->
                                <Grid x:Name="PART_YearView" Grid.Row="1" Visibility="Hidden" Margin="6,0,6,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
