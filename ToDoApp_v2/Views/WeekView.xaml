<UserControl x:Class="SlimeTodo.Views.WeekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SlimeTodo.Converters"
             x:Name="WeekViewRoot">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverse"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <converters:StringToColorBrushConverter x:Key="StringToColorBrush"/>

        <!-- Day Column Task Item Style -->
        <Style x:Key="WeekTaskItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Week Navigation Header -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Week Range -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="주간달력"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock Text="{Binding WeekRangeText}"
                           FontSize="14"
                           Foreground="{DynamicResource TextLightBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Center: Search Bar (when search mode) -->
            <Border Grid.Column="1"
                    Background="{DynamicResource HoverBrush}"
                    CornerRadius="8"
                    Padding="8,6"
                    Margin="12,0"
                    VerticalAlignment="Center">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsSearchMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="WeekSearchTextBox"
                             Grid.Column="0"
                             Text="{Binding DataContext.SearchText, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource TextBrush}"
                             CaretBrush="{DynamicResource TextBrush}"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="80"
                             KeyDown="WeekSearchTextBox_KeyDown"/>
                    <TextBlock Grid.Column="0"
                               Text="검색어를 입력하세요..."
                               FontSize="14"
                               Foreground="{DynamicResource TextLightBrush}"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding DataContext.SearchText.Length, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource IntToVisibilityConverter}}"/>
                    <Button Grid.Column="1"
                            Command="{Binding DataContext.CloseSearchCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Content="✕"
                            FontSize="14"
                            Padding="6,2"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextLightBrush}"
                            Cursor="Hand"
                            ToolTip="닫기 (Esc)"/>
                </Grid>
            </Border>

            <!-- Center: Quick Add Input (when QuickAdd visible) -->
            <Border Grid.Column="1"
                    Background="{DynamicResource HoverBrush}"
                    CornerRadius="8"
                    Padding="8,6"
                    Margin="12,0"
                    VerticalAlignment="Center">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsQuickAddVisible, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="WeekQuickAddTextBox"
                             Grid.Column="0"
                             Text="{Binding DataContext.QuickAddText, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource TextBrush}"
                             CaretBrush="{DynamicResource TextBrush}"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="80"
                             KeyDown="WeekQuickAddTextBox_KeyDown"/>
                    <TextBlock Grid.Column="0"
                               Text="할일을 입력하세요... (Enter로 추가)"
                               FontSize="14"
                               Foreground="{DynamicResource TextLightBrush}"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding DataContext.QuickAddText.Length, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource IntToVisibilityConverter}}"/>
                    <Button Grid.Column="1"
                            Command="{Binding DataContext.ToggleQuickAddCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Content="✕"
                            FontSize="14"
                            Padding="6,2"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextLightBrush}"
                            Cursor="Hand"
                            ToolTip="닫기 (Esc)"/>
                </Grid>
            </Border>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- Show Completed Toggle -->
                <Button Command="{Binding ToggleShowCompletedCommand}"
                        ToolTip="{Binding ShowCompletedText}"
                        Margin="0,0,8,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="4">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <Canvas Width="24" Height="24">
                                    <!-- 꼭지 (초록) -->
                                    <Ellipse Canvas.Left="7" Canvas.Top="0" Width="10" Height="8"
                                             Fill="{DynamicResource CompletedBrush}"/>
                                    <!-- 몸통 (보라) -->
                                    <Ellipse Canvas.Left="3" Canvas.Top="5" Width="18" Height="18"
                                             Fill="{DynamicResource AccentBrush}"/>
                                    <!-- 눈 뜬 상태 (완료 숨김) -->
                                    <Ellipse x:Name="eyeLeft" Canvas.Left="7" Canvas.Top="11" Width="3" Height="3" Fill="White"/>
                                    <Ellipse x:Name="eyeRight" Canvas.Left="14" Canvas.Top="11" Width="3" Height="3" Fill="White"/>
                                    <!-- 눈 감은 상태 (완료 보기) - 기본 숨김 -->
                                    <Line x:Name="eyeClosedLeft" X1="6" Y1="12.5" X2="11" Y2="12.5" Stroke="White" StrokeThickness="2" Visibility="Collapsed"/>
                                    <Line x:Name="eyeClosedRight" X1="13" Y1="12.5" X2="18" Y2="12.5" Stroke="White" StrokeThickness="2" Visibility="Collapsed"/>
                                </Canvas>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding ShowCompleted}" Value="False">
                                    <Setter TargetName="eyeLeft" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="eyeRight" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="eyeClosedLeft" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="eyeClosedRight" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Command="{Binding PreviousWeekCommand}"
                        Content="◀"
                        Style="{DynamicResource SmallButtonStyle}"
                        Margin="0,0,4,0"/>

                <Button Command="{Binding TodayWeekCommand}"
                        Content="오늘"
                        Style="{DynamicResource SmallButtonStyle}"
                        Padding="12,4"
                        Margin="0,0,4,0"
                        IsEnabled="{Binding IsCurrentWeek, Converter={StaticResource InverseBoolConverter}}">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Command="{Binding NextWeekCommand}"
                        Content="▶"
                        Style="{DynamicResource SmallButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Day Columns -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Days}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2,0"
                            CornerRadius="8"
                            Padding="8"
                            AllowDrop="True"
                            Drop="DayColumn_Drop"
                            DragOver="DayColumn_DragOver"
                            DragLeave="DayColumn_DragLeave"
                            Tag="{Binding Date}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource SidebarBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsPast}" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Day Header -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                                <TextBlock Text="{Binding DayName}"
                                           FontSize="11"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding DayNumber}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Task List -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding Tasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource WeekTaskItemStyle}"
                                                    MouseLeftButtonDown="TaskItem_MouseLeftButtonDown"
                                                    MouseMove="TaskItem_MouseMove"
                                                    Tag="{Binding}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Mini Checkbox - 해시태그 색상 적용 -->
                                                    <Button Grid.Column="0"
                                                            Command="{Binding ToggleCompleteCommand}"
                                                            VerticalAlignment="Top"
                                                            Margin="0,2,6,0"
                                                            Cursor="Hand"
                                                            Background="Transparent"
                                                            BorderThickness="0">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Grid Width="18" Height="18">
                                                                    <Ellipse x:Name="circle"
                                                                             Width="18" Height="18"
                                                                             StrokeThickness="2"
                                                                             Fill="Transparent">
                                                                        <Ellipse.Style>
                                                                            <Style TargetType="Ellipse">
                                                                                <Setter Property="Stroke" Value="{DynamicResource TextLightBrush}"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding HasHashTags}" Value="True">
                                                                                        <Setter Property="Stroke" Value="{Binding FirstHashTagColor, Converter={StaticResource StringToColorBrush}}"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Ellipse.Style>
                                                                    </Ellipse>
                                                                    <Path x:Name="checkmark"
                                                                          Data="M 4.5,9 L 7.5,12 L 13.5,6"
                                                                          StrokeThickness="2"
                                                                          StrokeStartLineCap="Round"
                                                                          StrokeEndLineCap="Round"
                                                                          StrokeLineJoin="Round"
                                                                          Visibility="Collapsed">
                                                                        <Path.Style>
                                                                            <Style TargetType="Path">
                                                                                <Setter Property="Stroke" Value="{DynamicResource AccentBrush}"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding HasHashTags}" Value="True">
                                                                                        <Setter Property="Stroke" Value="{Binding FirstHashTagColor, Converter={StaticResource StringToColorBrush}}"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Path.Style>
                                                                    </Path>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <!-- 완료 상태 - 진한 테두리 + 연한 배경 -->
                                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                        <Setter TargetName="circle" Property="Fill" Value="{DynamicResource CompletedFillBrush}"/>
                                                                        <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <!-- 호버 시 테두리 강조 -->
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="circle" Property="StrokeThickness" Value="2.5"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>

                                                    <!-- Task Content -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                                        <!-- Task Title (Normal) -->
                                                        <TextBlock Text="{Binding Title}"
                                                                   FontSize="12"
                                                                   TextWrapping="Wrap"
                                                                   MouseLeftButtonDown="TaskTitle_MouseLeftButtonDown"
                                                                   Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityInverse}}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                            <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsImportant}" Value="True">
                                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <!-- 해시태그 표시 -->
                                                        <ItemsControl ItemsSource="{Binding HashTagList}"
                                                                      Margin="0,2,0,0"
                                                                      Visibility="{Binding HasHashTags, Converter={StaticResource BoolToVisibility}}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Background="{Binding Color, Converter={StaticResource StringToColorBrush}}"
                                                                            CornerRadius="6"
                                                                            Padding="4,1"
                                                                            Margin="0,0,3,1"
                                                                            Opacity="0.85">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="#"
                                                                                       FontSize="9"
                                                                                       FontWeight="Bold"
                                                                                       Foreground="White"
                                                                                       Margin="0,0,1,0"/>
                                                                            <TextBlock Text="{Binding Name}"
                                                                                       FontSize="9"
                                                                                       Foreground="White"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>

                                                    <!-- Task Title (Editing) -->
                                                    <TextBox Grid.Column="1"
                                                             Text="{Binding EditingTitle, UpdateSourceTrigger=PropertyChanged}"
                                                             FontSize="12"
                                                             Padding="2"
                                                             Background="{DynamicResource CardBrush}"
                                                             Foreground="{DynamicResource TextBrush}"
                                                             BorderBrush="{DynamicResource AccentBrush}"
                                                             BorderThickness="1"
                                                             CaretBrush="{DynamicResource TextBrush}"
                                                             TextWrapping="Wrap"
                                                             AcceptsReturn="False"
                                                             MaxHeight="80"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}"
                                                             KeyDown="EditTaskTextBox_KeyDown"
                                                             LostFocus="EditTaskTextBox_LostFocus"
                                                             Loaded="EditTaskTextBox_Loaded"/>

                                                    <!-- Important Star -->
                                                    <Button Grid.Column="2"
                                                            Command="{Binding ToggleImportantCommand}"
                                                            VerticalAlignment="Top"
                                                            Margin="4,2,0,0"
                                                            Cursor="Hand"
                                                            Background="Transparent"
                                                            BorderThickness="0">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <TextBlock x:Name="star"
                                                                           FontSize="12"
                                                                           Text="☆"
                                                                           Foreground="{DynamicResource TextLightBrush}"/>
                                                                <ControlTemplate.Triggers>
                                                                    <DataTrigger Binding="{Binding IsImportant}" Value="True">
                                                                        <Setter TargetName="star" Property="Text" Value="★"/>
                                                                        <Setter TargetName="star" Property="Foreground" Value="{DynamicResource ImportantBrush}"/>
                                                                    </DataTrigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="star" Property="Foreground" Value="{DynamicResource ImportantBrush}"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Add Task Button / Input -->
                            <Grid Grid.Row="2" Margin="0,8,0,0">
                                <!-- Add Button -->
                                <Button Command="{Binding StartAddTaskCommand}"
                                        Content="+ 추가"
                                        FontSize="11"
                                        Padding="0,4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{DynamicResource TextLightBrush}"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAddingTask}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Add Input -->
                                <Grid Visibility="{Binding IsAddingTask, Converter={StaticResource BoolToVisibility}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBox Grid.Row="0"
                                             Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="11"
                                             Padding="6,4"
                                             Background="{DynamicResource CardBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource AccentBrush}"
                                             BorderThickness="1"
                                             CaretBrush="{DynamicResource TextBrush}"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="False"
                                             MaxHeight="80"
                                             KeyDown="AddTaskTextBox_KeyDown"
                                             Loaded="AddTaskTextBox_Loaded"/>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                        <Button Command="{Binding AddTaskCommand}"
                                                Content="추가"
                                                FontSize="10"
                                                Padding="8,2"
                                                Background="{DynamicResource AccentBrush}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                        <Button Command="{Binding CancelAddTaskCommand}"
                                                Content="취소"
                                                FontSize="10"
                                                Padding="8,2"
                                                Margin="4,0,0,0"
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextLightBrush}"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Unscheduled Tasks Panel -->
        <Border Grid.Row="2"
                Margin="0,12,0,0"
                Background="{DynamicResource SidebarBrush}"
                CornerRadius="8"
                Padding="12,8"
                AllowDrop="True"
                Drop="UnscheduledPanel_Drop"
                DragOver="UnscheduledPanel_DragOver"
                DragLeave="UnscheduledPanel_DragLeave">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Button Grid.Row="0"
                        Command="{Binding ToggleUnscheduledCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="10"
                                   Foreground="{DynamicResource TextLightBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="▶"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsUnscheduledExpanded}" Value="True">
                                            <Setter Property="Text" Value="▼"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="TO-DO list"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock FontSize="11"
                                   Foreground="{DynamicResource TextLightBrush}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Text>
                                <Binding Path="UnscheduledCount" StringFormat="({0})"/>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!-- Unscheduled Tasks List -->
                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding UnscheduledTasks}"
                              Margin="0,8,0,0"
                              Visibility="{Binding IsUnscheduledExpanded, Converter={StaticResource BoolToVisibility}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBrush}"
                                    CornerRadius="6"
                                    Padding="10,6"
                                    Margin="0,0,8,8"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="UnscheduledTask_MouseLeftButtonDown"
                                    MouseMove="UnscheduledTask_MouseMove"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- 해시태그 색상이 있으면 색상 원, 없으면 기본 원 -->
                                    <TextBlock Grid.Column="0"
                                               FontSize="10"
                                               VerticalAlignment="Top"
                                               Margin="0,2,6,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="○"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasHashTags}" Value="True">
                                                        <Setter Property="Text" Value="●"/>
                                                        <Setter Property="Foreground" Value="{Binding FirstHashTagColor, Converter={StaticResource StringToColorBrush}}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top" MaxWidth="250">
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsImportant}" Value="True">
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <!-- 해시태그 표시 (작은 크기) -->
                                        <ItemsControl ItemsSource="{Binding HashTagList}"
                                                      Margin="0,2,0,0"
                                                      Visibility="{Binding HasHashTags, Converter={StaticResource BoolToVisibility}}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{Binding Color, Converter={StaticResource StringToColorBrush}}"
                                                            CornerRadius="4"
                                                            Padding="3,1"
                                                            Margin="0,0,2,1"
                                                            Opacity="0.85">
                                                        <TextBlock Text="{Binding Name, StringFormat='#{0}'}"
                                                                   FontSize="8"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <TextBlock Grid.Row="1"
                           Text="TO-DO list가 비어있습니다"
                           FontSize="11"
                           Foreground="{DynamicResource TextLightBrush}"
                           Margin="20,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding UnscheduledCount}" Value="0"/>
                                        <Condition Binding="{Binding IsUnscheduledExpanded}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
