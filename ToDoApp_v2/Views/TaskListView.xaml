<UserControl x:Class="SlimeTodo.Views.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SlimeTodo.Converters"
             xmlns:models="clr-namespace:SlimeTodo.Models">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StringToColorBrushConverter x:Key="StringToColorBrush"/>
    </UserControl.Resources>

    <Grid>
        <ListBox x:Name="TaskList"
                 ItemsSource="{Binding Tasks}"
                 SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalContentAlignment="Stretch"
                 SelectionMode="Single"
                 Focusable="True"
                 KeyDown="TaskList_KeyDown"
                 AllowDrop="True"
                 PreviewMouseLeftButtonDown="TaskList_PreviewMouseLeftButtonDown"
                 PreviewMouseMove="TaskList_PreviewMouseMove"
                 Drop="TaskList_Drop"
                 DragOver="TaskList_DragOver">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="5"
                                        Padding="12,8"
                                        BorderThickness="0"
                                        BorderBrush="Transparent">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 오늘까지 마감 - 보라색 배경 -->
                                    <DataTrigger Binding="{Binding IsDueToday}" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource TodayCardBrush}"/>
                                    </DataTrigger>
                                    <!-- 연체 - 빨간색 배경 (오늘 마감보다 우선) -->
                                    <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource OverdueCardBrush}"/>
                                    </DataTrigger>
                                    <!-- 중요 표시 (연체보다 우선) - 테두리 없음 -->
                                    <DataTrigger Binding="{Binding IsImportant}" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource ImportantCardBrush}"/>
                                    </DataTrigger>
                                    <!-- 선택 상태 - 더 옅은 색 -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectedLightBrush}"/>
                                    </Trigger>
                                    <!-- 비선택 상태에서 호버 -->
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                            <Condition Property="IsSelected" Value="False"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                    </MultiTrigger>
                                    <!-- 선택 상태에서 호버 -->
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                            <Condition Property="IsSelected" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectedHoverBrush}"/>
                                    </MultiTrigger>
                                    <!-- 중요 할일 + 비선택 + 호버 -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsImportant}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource ImportantHoverBrush}"/>
                                    </MultiDataTrigger>
                                    <!-- 연체 할일 + 비선택 + 호버 -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsOverdue}" Value="True"/>
                                            <Condition Binding="{Binding IsImportant}" Value="False"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource OverdueHoverBrush}"/>
                                    </MultiDataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <!-- Main Task Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>  <!-- 0: Expand -->
                                <ColumnDefinition Width="Auto"/>  <!-- 1: Checkbox -->
                                <ColumnDefinition Width="*"/>     <!-- 2: Title -->
                                <ColumnDefinition Width="Auto"/>  <!-- 3: Add SubTask -->
                                <ColumnDefinition Width="Auto"/>  <!-- 4: Important -->
                                <ColumnDefinition Width="Auto"/>  <!-- 5: Recurrence -->
                                <ColumnDefinition Width="Auto"/>  <!-- 6: Due Date -->
                                <ColumnDefinition Width="Auto"/>  <!-- 7: Delete -->
                            </Grid.ColumnDefinitions>

                            <!-- Expand Button -->
                            <Button Grid.Column="0"
                                    Command="{Binding ToggleExpandCommand}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,4,0"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="16" Height="16">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSubTasks}" Value="False">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock FontSize="10" Foreground="{DynamicResource TextLightBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="▶"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                    <Setter Property="Text" Value="▼"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>

                            <!-- Checkbox (Todoist Style) - 해시태그 색상 적용 -->
                            <Button Grid.Column="1"
                                    Command="{Binding ToggleCompleteCommand}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Width="20" Height="20">
                                            <!-- 원형 테두리 - 해시태그 있으면 해시태그 색상, 없으면 기본 색상 -->
                                            <Ellipse x:Name="circle"
                                                     Width="20" Height="20"
                                                     StrokeThickness="2"
                                                     Fill="Transparent">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Stroke" Value="{DynamicResource TextLightBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasHashTags}" Value="True">
                                                                <Setter Property="Stroke" Value="{Binding FirstHashTagColor, Converter={StaticResource StringToColorBrush}}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <!-- 체크 아이콘 (정가운데) -->
                                            <Path x:Name="checkmark"
                                                  Data="M 5,10 L 8.5,13.5 L 15,7"
                                                  StrokeThickness="2"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  StrokeLineJoin="Round"
                                                  Visibility="Collapsed">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Stroke" Value="{DynamicResource AccentBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasHashTags}" Value="True">
                                                                <Setter Property="Stroke" Value="{Binding FirstHashTagColor, Converter={StaticResource StringToColorBrush}}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <!-- 완료 상태 - 진한 테두리 + 연한 배경 -->
                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                <Setter TargetName="circle" Property="Fill" Value="{DynamicResource CompletedFillBrush}"/>
                                                <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <!-- 호버 시 테두리 강조 -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="circle" Property="StrokeThickness" Value="2.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Title (Display Mode) -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <!-- 제목 및 서브태스크 진행률 -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Title}"
                                               FontSize="13"
                                               TextWrapping="Wrap"
                                               MouseLeftButtonDown="Title_MouseLeftButtonDown"
                                               Cursor="Hand">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource OverdueBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <!-- SubTask Progress -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding SubTaskProgress}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextLightBrush}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding HasSubTasks, Converter={StaticResource BoolToVisibility}}"/>
                                </Grid>
                                <!-- 해시태그 표시 (클릭하여 삭제 가능) -->
                                <ItemsControl ItemsSource="{Binding HashTagList}"
                                              Margin="0,2,0,0"
                                              Visibility="{Binding HasHashTags, Converter={StaticResource BoolToVisibility}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Color, Converter={StaticResource StringToColorBrush}}"
                                                    CornerRadius="8"
                                                    Padding="6,2"
                                                    Margin="0,0,4,2"
                                                    Opacity="0.85"
                                                    Cursor="Hand"
                                                    ToolTip="클릭하여 삭제">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick" Command="{Binding RemoveCommand}"/>
                                                </Border.InputBindings>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="#"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               Margin="0,0,1,0"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="10"
                                                               Foreground="White"/>
                                                    <TextBlock Text="×"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               Opacity="0.7"
                                                               Margin="4,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Title (Edit Mode) -->
                            <TextBox Grid.Column="2"
                                     x:Name="EditTextBox"
                                     Text="{Binding EditingTitle, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     FontSize="13"
                                     Padding="4,2"
                                     BorderThickness="1"
                                     BorderBrush="{DynamicResource AccentBrush}"
                                     Background="{DynamicResource CardBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     CaretBrush="{DynamicResource TextBrush}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="False"
                                     MaxHeight="100"
                                     KeyDown="EditTextBox_KeyDown"
                                     LostFocus="EditTextBox_LostFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Add SubTask Button -->
                            <Button Grid.Column="3"
                                    Style="{DynamicResource ToggleButtonStyle}"
                                    Command="{Binding StartAddSubTaskCommand}"
                                    ToolTip="하위 작업 추가"
                                    Margin="2,0">
                                <TextBlock Text="+" FontSize="13" Foreground="{DynamicResource TextBrush}" Opacity="0.7"/>
                            </Button>

                            <!-- Add HashTag Button -->
                            <Button Grid.Column="3"
                                    Style="{DynamicResource ToggleButtonStyle}"
                                    ToolTip="해시태그 추가"
                                    Margin="2,0"
                                    Click="HashTagAddButton_Click">
                                <TextBlock Text="#" FontSize="13" Foreground="{DynamicResource AccentBrush}" Opacity="0.8"/>
                                <Button.ContextMenu>
                                    <ContextMenu x:Name="HashTagContextMenu">
                                        <ContextMenu.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="10" Height="10"
                                                             Fill="{Binding Color, Converter={StaticResource StringToColorBrush}}"
                                                             Margin="0,0,8,0"
                                                             VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Name, StringFormat='#{0}'}"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ContextMenu.ItemTemplate>
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Command" Value="{Binding AddCommand}"/>
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                            <!-- Important Toggle (Yellow Star like calendar) -->
                            <Button Grid.Column="4"
                                    Style="{DynamicResource ToggleButtonStyle}"
                                    Command="{Binding ToggleImportantCommand}"
                                    ToolTip="중요 표시 (S)"
                                    Margin="2,0">
                                <TextBlock FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="☆"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsImportant}" Value="True">
                                                    <Setter Property="Text" Value="★"/>
                                                    <Setter Property="Foreground" Value="#FFB800"/>
                                                    <Setter Property="Opacity" Value="1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>

                            <!-- Recurrence Button -->
                            <Button Grid.Column="5"
                                    Style="{DynamicResource ToggleButtonStyle}"
                                    ToolTip="반복 설정 (클릭)"
                                    Margin="2,0"
                                    Click="RecurrenceButton_Click">
                                <Button.ContextMenu>
                                    <ContextMenu x:Name="RecurrenceMenu">
                                        <MenuItem Header="반복 없음"
                                                  Command="{Binding SetRecurrenceCommand}"
                                                  CommandParameter="{x:Static models:RecurrenceType.None}"/>
                                        <Separator/>
                                        <MenuItem Header="매일"
                                                  Command="{Binding SetRecurrenceCommand}"
                                                  CommandParameter="{x:Static models:RecurrenceType.Daily}"/>
                                        <MenuItem Header="매주"
                                                  Command="{Binding SetRecurrenceCommand}"
                                                  CommandParameter="{x:Static models:RecurrenceType.Weekly}"/>
                                        <MenuItem Header="매월"
                                                  Command="{Binding SetRecurrenceCommand}"
                                                  CommandParameter="{x:Static models:RecurrenceType.Monthly}"/>
                                        <MenuItem Header="매년"
                                                  Command="{Binding SetRecurrenceCommand}"
                                                  CommandParameter="{x:Static models:RecurrenceType.Yearly}"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <TextBlock FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="↻"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasRecurrence}" Value="True">
                                                    <Setter Property="Opacity" Value="1"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>

                            <!-- Due Date with Calendar Popup -->
                            <Grid Grid.Column="6" VerticalAlignment="Center" Margin="6,0,0,0">
                                <Button x:Name="DueDateButton"
                                        Command="{Binding StartEditDueDateCommand}"
                                        MinWidth="60"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="날짜 클릭하여 수정">
                                    <TextBlock FontSize="11" TextAlignment="Right">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}"/>
                                                <Setter Property="Text" Value="{Binding DueDateText}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource OverdueBrush}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HasRecurrence}" Value="True">
                                                        <Setter Property="Text" Value="{Binding RecurrenceText}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DueDateText}" Value="">
                                                        <Setter Property="Text" Value="+"/>
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>
                                <Popup IsOpen="{Binding IsEditingDueDate, Mode=TwoWay}"
                                       StaysOpen="False"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=DueDateButton}"
                                       AllowsTransparency="True"
                                       PopupAnimation="Fade">
                                    <Border Background="{DynamicResource CardBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="4"
                                            Margin="0,4,0,0">
                                        <StackPanel>
                                            <Calendar SelectedDate="{Binding DueDate, Mode=TwoWay}"
                                                      SelectedDatesChanged="Calendar_SelectedDatesChanged"
                                                      Background="Transparent"
                                                      BorderThickness="0"/>
                                            <Button Command="{Binding ClearDueDateCommand}"
                                                    Content="날짜 삭제"
                                                    FontSize="11"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="{DynamicResource TextLightBrush}"
                                                    Padding="8,4"
                                                    Margin="0,4,0,0"
                                                    Cursor="Hand"
                                                    HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Grid>

                            <!-- Delete Button -->
                            <Button Grid.Column="7"
                                    Style="{DynamicResource ToggleButtonStyle}"
                                    Command="{Binding DeleteCommand}"
                                    ToolTip="삭제 (Delete)"
                                    Margin="4,0,0,0">
                                <TextBlock Text="×" FontSize="16" Foreground="{DynamicResource TextBrush}" Opacity="0.6"/>
                            </Button>
                        </Grid>

                        <!-- SubTasks Section -->
                        <StackPanel Margin="28,4,0,0"
                                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibility}}">
                            <!-- SubTask List -->
                            <ItemsControl ItemsSource="{Binding SubTasks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- SubTask Checkbox (Todoist Style) -->
                                            <Button Grid.Column="0"
                                                    Command="{Binding ToggleCompleteCommand}"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"
                                                    Cursor="Hand"
                                                    Background="Transparent"
                                                    BorderThickness="0">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid Width="16" Height="16">
                                                            <Ellipse x:Name="circle"
                                                                     Width="16" Height="16"
                                                                     Stroke="{DynamicResource TextLightBrush}"
                                                                     StrokeThickness="1.5"
                                                                     Fill="Transparent"/>
                                                            <Path x:Name="checkmark"
                                                                  Data="M 4,8 L 6.5,10.5 L 12,5"
                                                                  Stroke="{DynamicResource AccentBrush}"
                                                                  StrokeThickness="1.5"
                                                                  StrokeStartLineCap="Round"
                                                                  StrokeEndLineCap="Round"
                                                                  StrokeLineJoin="Round"
                                                                  Visibility="Collapsed"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <!-- 완료 상태 - 진한 테두리 + 연한 배경 -->
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter TargetName="circle" Property="Fill" Value="{DynamicResource CompletedFillBrush}"/>
                                                                <Setter TargetName="circle" Property="Stroke" Value="{DynamicResource AccentBrush}"/>
                                                                <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <!-- 호버 시 AccentColor로 테두리 강조 -->
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="circle" Property="Stroke" Value="{DynamicResource AccentBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <!-- SubTask Title (Display Mode) -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Title}"
                                                       FontSize="12"
                                                       Opacity="0.9"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       MouseLeftButtonDown="SubTaskTitle_MouseLeftButtonDown"
                                                       Cursor="Hand">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                <Setter Property="Foreground" Value="{DynamicResource TextLightBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- SubTask Title (Edit Mode) -->
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding EditingTitle, UpdateSourceTrigger=PropertyChanged}"
                                                     FontSize="12"
                                                     VerticalAlignment="Center"
                                                     Padding="2,1"
                                                     BorderThickness="1"
                                                     BorderBrush="{DynamicResource AccentBrush}"
                                                     Background="{DynamicResource CardBrush}"
                                                     Foreground="{DynamicResource TextBrush}"
                                                     CaretBrush="{DynamicResource TextBrush}"
                                                     TextWrapping="Wrap"
                                                     AcceptsReturn="False"
                                                     MaxHeight="80"
                                                     KeyDown="SubTaskEditTextBox_KeyDown"
                                                     LostFocus="SubTaskEditTextBox_LostFocus">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>

                                            <!-- Delete SubTask -->
                                            <Button Grid.Column="2"
                                                    Command="{Binding DeleteCommand}"
                                                    VerticalAlignment="Center"
                                                    Cursor="Hand"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Opacity="0.5">
                                                <TextBlock Text="×" FontSize="14" Foreground="{DynamicResource TextLightBrush}"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Add SubTask Input -->
                            <Grid Margin="0,4,0,0"
                                  Visibility="{Binding IsAddingSubTask, Converter={StaticResource BoolToVisibility}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         x:Name="SubTaskInputTextBox"
                                         Text="{Binding NewSubTaskTitle, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="12"
                                         Padding="4,2"
                                         BorderThickness="1"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Background="{DynamicResource CardBrush}"
                                         Foreground="{DynamicResource TextBrush}"
                                         CaretBrush="{DynamicResource TextBrush}"
                                         KeyDown="SubTaskTextBox_KeyDown"
                                         Loaded="SubTaskInputTextBox_Loaded"/>

                                <Button Grid.Column="1"
                                        Command="{Binding AddSubTaskCommand}"
                                        Content="추가"
                                        FontSize="11"
                                        Padding="8,2"
                                        Margin="4,0,0,0"
                                        Background="{DynamicResource AccentBrush}"
                                        Foreground="White"
                                        BorderThickness="0"/>

                                <Button Grid.Column="2"
                                        Command="{Binding CancelAddSubTaskCommand}"
                                        Content="취소"
                                        FontSize="11"
                                        Padding="8,2"
                                        Margin="4,0,0,0"
                                        Background="Transparent"
                                        Foreground="{DynamicResource TextLightBrush}"
                                        BorderThickness="0"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Empty State -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding Tasks.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
            <TextBlock Text="할일이 없어요!"
                       FontSize="16"
                       Foreground="{DynamicResource TextLightBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="위에서 새 할일을 추가해보세요"
                       FontSize="12"
                       Foreground="{DynamicResource TextLightBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
