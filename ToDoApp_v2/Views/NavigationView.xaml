<UserControl x:Class="SlimeTodo.Views.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:SlimeTodo.Views"
             xmlns:converters="clr-namespace:SlimeTodo.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:StringToColorBrushConverter x:Key="StringToColorBrush"/>

        <!-- Nav Button Style with DynamicResource for theme switching -->
        <Style x:Key="LocalNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Tag" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="indicator"
                                    Width="3"
                                    HorizontalAlignment="Left"
                                    CornerRadius="0,2,2,0"
                                    Background="Transparent"/>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}"
                                    Margin="4,0,0,0">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Non-selected hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                            </MultiTrigger>
                            <!-- Selected state - show indicator bar -->
                            <Trigger Property="Tag" Value="True">
                                <Setter TargetName="indicator" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectedLightBrush}"/>
                            </Trigger>
                            <!-- Selected hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LocalNavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource LocalNavButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SelectedLightBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </UserControl.Resources>

