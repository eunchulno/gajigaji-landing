<UserControl x:Class="SlimeTodo.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Style="{DynamicResource ThinOverlayScrollViewer}">
        <StackPanel Margin="16">
            <!-- Header -->
            <TextBlock Text="통계"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,16"/>

            <!-- Summary Cards -->
            <UniformGrid Columns="3" Margin="0,0,0,16">
                <!-- Total Completed -->
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="총 완료"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextLightBrush}"/>
                        <TextBlock Text="{Binding TotalCompleted}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Current Streak -->
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="연속 기록"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextLightBrush}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentStreak}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="일"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextLightBrush}"
                                       VerticalAlignment="Bottom"
                                       Margin="4,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Best Streak -->
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="최고 기록"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextLightBrush}"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding BestStreak}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#FFD700"/>
                            <TextBlock Text="일"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextLightBrush}"
                                       VerticalAlignment="Bottom"
                                       Margin="4,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Weekly Chart -->
            <Border Background="{DynamicResource CardBrush}"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="최근 7일"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,12"/>

                    <ItemsControl ItemsSource="{Binding WeeklyData}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Margin="4,0">
                                    <!-- Bar -->
                                    <Border Width="24"
                                            Height="{Binding BarHeight}"
                                            Background="{DynamicResource AccentBrush}"
                                            CornerRadius="4,4,0,0"
                                            VerticalAlignment="Bottom"
                                            MinHeight="4"/>
                                    <!-- Count -->
                                    <TextBlock Text="{Binding Completed}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                    <!-- Day -->
                                    <TextBlock Text="{Binding DayName}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextLightBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Activity Heatmap (simple version) -->
            <Border Background="{DynamicResource CardBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="최근 30일 활동"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,12"/>

                    <ItemsControl ItemsSource="{Binding MonthlyData}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="16" Height="16"
                                        Margin="2"
                                        CornerRadius="2"
                                        Background="{Binding Color}"
                                        ToolTip="{Binding Tooltip}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="적음" FontSize="10" Foreground="{DynamicResource TextLightBrush}" Margin="0,0,4,0"/>
                        <Border Width="12" Height="12" CornerRadius="2" Background="#E8E8E8" Margin="2,0"/>
                        <Border Width="12" Height="12" CornerRadius="2" Background="#C6E48B" Margin="2,0"/>
                        <Border Width="12" Height="12" CornerRadius="2" Background="#7BC96F" Margin="2,0"/>
                        <Border Width="12" Height="12" CornerRadius="2" Background="#239A3B" Margin="2,0"/>
                        <Border Width="12" Height="12" CornerRadius="2" Background="#196127" Margin="2,0"/>
                        <TextBlock Text="많음" FontSize="10" Foreground="{DynamicResource TextLightBrush}" Margin="4,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
